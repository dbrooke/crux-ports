# Description: open source electronics design template library
# URL: http://kicad-pcb.org/
# Maintainer: David Brooke, crux at dbrooke dot me dot uk
# Depends on: cmake

name=kicad-templates
version=5.0.1
release=1
source=(https://github.com/KiCad/${name}/archive/${version}/${name}-${version}.tar.gz)

build() {
	cd $name-$version

	mkdir build
	cd build
	cmake -DCMAKE_BUILD_TYPE=Release -DKICAD_SCRIPTING=ON -DKICAD_SCRIPTING_MODULES=ON -DKICAD_SCRIPTING_WXPYTHON=ON -DKICAD_SKIP_BOOST=ON -DCMAKE_INSTALL_PREFIX=/usr ..
	make
	make DESTDIR=$PKG install
}
