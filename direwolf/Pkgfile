# Description: a software "soundcard" modem/TNC and APRS encoder/decoder
# URL: https://github.com/wb2osz/direwolf
# Maintainer: David Brooke, crux at dbrooke dot me dot uk
# Depends on: alsa-lib

name=direwolf
version=1.3
release=2
source=(https://github.com/wb2osz/${name}/archive/${version}.tar.gz
        gcc6.patch)

build()
{
  cd $name-$version 
  sed -i 's|/usr/share|$(INSTALLDIR)/share|' Makefile.linux
  sed -i 's|/man/|/share/man/|' Makefile.linux
  patch -i $SRC/gcc6.patch
  make
  mkdir -p $PKG/usr/bin
  make INSTALLDIR=$PKG/usr install
  rm -r $PKG/usr/share/doc
}
