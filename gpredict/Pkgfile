# Description: real-time satellite tracking and orbit prediction
# URL: http://gpredict.oz9aec.net
# Maintainer: David Brooke, crux at dbrooke dot me dot uk
# Depends on: intltool goocanvas

name=gpredict
version=2.2
release=1
source=(https://downloads.sourceforge.net/project/${name}/Gpredict/${version}/${name}-${version}.tar.bz2)
build() {
  cd $name-$version
  ./configure --prefix=/usr
  make
  make DESTDIR=$PKG install
  rm -r $PKG/usr/share/locale
  rm $PKG/usr/share/gpredict/{AUTHORS,COPYING,NEWS,README}
}
