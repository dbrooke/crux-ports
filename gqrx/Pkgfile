# Description: software defined radio receiver
# URL: http://gqrx.dk/
# Maintainer: David Brooke, crux at dbrooke dot me dot uk
# Depends on: gr-osmosdr qt4

name=gqrx
version=2.3.2
release=1
source=(http://downloads.sourceforge.net/project/$name/$version/$name-$version.tar.xz)

build() {
	cd $name-$version

	mkdir build
	cd build
	qmake PREFIX=/usr ..
	make
	make INSTALL_ROOT=$PKG install
}
