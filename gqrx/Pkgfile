# Description: software defined radio receiver
# URL: http://gqrx.dk/
# Maintainer: David Brooke, crux at dbrooke dot me dot uk
# Depends on: gr-osmosdr qt4

name=gqrx
version=2.5
release=1
source=(https://github.com/csete/${name}/releases/download/v${version}/${name}-sdr-src-${version}.tar.xz)

build() {
	cd $name-sdr-$version

	mkdir build
	cd build
	qmake PREFIX=/usr ..
	make
	make INSTALL_ROOT=$PKG install
}
